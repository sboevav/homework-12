# -*- mode: ruby -*-
# vim: set ft=ruby :

MACHINES = {
  :otuslinux => {
        :box_name => "centos/7",
        :ip_addr => '192.168.11.101',
  },
}

Vagrant.configure("2") do |config|

 # config.vm.provision "shell", path: "install.sh"

  MACHINES.each do |boxname, boxconfig|

      config.vm.define boxname do |box|

          box.vm.box = boxconfig[:box_name]
          box.vm.host_name = boxname.to_s

          #box.vm.network "forwarded_port", guest: 80, host: 80

          box.vm.network "private_network", ip: boxconfig[:ip_addr]

          box.vm.provider :virtualbox do |vb|
            	  vb.customize ["modifyvm", :id, "--memory", "256"]
          end

      box.vm.provision "shell", inline: <<-SHELL
	    mkdir -p ~root/.ssh
            cp ~vagrant/.ssh/auth* ~root/.ssh

            for pkg in epel-release pam_script; do yum install -y $pkg; done	    
            #useradd  -g vagrant -p 123 test_user

useradd test_user
groupadd admin
usermod -a -G admin test_user
echo "test_user:123456" | chpasswd

sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config

sed -i '2i auth  required  pam_script.so /vagrant/scripts/pam_date_check.sh'  /etc/pam.d/sshd
sed -i '8i account required pam_access.so' /etc/pam.d/sshd
sed -i '9i account required pam_time.so' /etc/pam.d/sshd

sed -i '5i account required pam_access.so' /etc/pam.d/login
sed -i '6i account required pam_time.so' /etc/pam.d/login

            # cp /vagrant/scripts/pam_date_check.sh /etc/pam_script/
	    systemctl restart sshd
  	  SHELL

      end
  end
end
